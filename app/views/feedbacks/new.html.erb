<div class="row justify-content-center mt-3">
  <div class="col col-md-6">
    <h1><%= t('.feedback') %></h1>
      <div class="card border-primary">  
        <div class="card-body">

        <%= form_with model: @feedback, local: true do |form| %>
          <div class="form-group">
            <%= render 'shared/errors', resource: @feedback %> 

            <p>
              <%= form.label :title %>
              <%= form.text_field :title, id: :feedback_title, 
                                   class: 'form-control' %>
            </p>

            <p>
              <%= form.label :body %>
              <%= form.text_area :body, id: :feedback_body,
                                  rows: 7, class: 'form-control' %>
            </p>


            <p><%= form.submit class: 'btn btn-primary' %></p>
          </div>  
        <% end %>
      </div>  
    </div>  
    <%= link_to t('back'), tests_path %>
  </div>  
</div>
