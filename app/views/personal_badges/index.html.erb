<h1><%= t('.header') %></h1>

<p>
  <%= link_to t('.test_view'), tests_path, class: 'btn btn-primary' %>    
</p>

<h2><%= t('.personal_badges') %></h2>
<div class="row mt-3">
  <table class="table">
     <tr class="table-primary">
      <th><%= t('.name') %></th>
      <th></th>
      <th><%= t('.description') %></th>      
    </tr>

    <%= render @personal_badges %>

    <% unless @personal_badges.present? %>
      <th colspan="3"><%= t('.no_badges') %></th>  
    <% end %>
  </table>
</div>


<h2><%= t('.all_badges') %></h2>
<div class="row mt-3">
  <table class="table">
     <tr class="table-primary">
      <th><%= t('.name') %></th>
      <th></th>
      <th><%= t('.description') %></th>      
    </tr>

    <%= render @badges %>

    <% unless @badges.present? %>
      <th colspan="3"><%= t('.no_badges') %></th>  
    <% end %>
  </table>
</div>
