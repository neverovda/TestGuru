<p>
  <strong>Test: </strong>
  <%= @test.title %>
</p>

<p>
  <strong>Level: </strong>
  <%= @test.level %>
</p>

<p>
  <%= link_to 'Back', tests_path %>
  <%= link_to 'New question', new_test_question_path %>   
</p>


<table>
  <caption>Questions</caption>
  <tr>
    <th>Body</th>
    <th colspan="3">Action</th>
  </tr>

  <%= render @test.questions %>

  <% unless @test.questions.present? %>
    <th colspan="3">The test has no questions</th>  
  <% end %>
</table>
