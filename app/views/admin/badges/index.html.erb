<h1><%= t('.header') %></h1>

<p>
  <%= link_to t('.admin_test_view'), admin_tests_path, class: 'btn btn-primary' %>  
  <%= link_to t('.new_badge'), new_admin_badge_path, class: 'btn btn-primary' %>
</p>



<div class="row mt-3">
  <table class="table">
     <tr class="table-primary">
      <th><%= t('.name') %></th>
      <th></th>
      <th><%= t('.description') %></th>
      <th colspan="3"><%= t('action') %></th>
    </tr>

    <%= render @badges %>

    <% unless @badges.present? %>
      <th colspan="6"><%= t('.no_badges') %></th>  
    <% end %>
  </table>
</div>
