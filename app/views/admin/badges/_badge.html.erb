<tr>
  <td class="align-middle"><%= badge.name %></td>
  <td><img src="/badge.jpg" height="30" width="30"></td>
  <td><%= badge.description %></td>
  <td class="align-middle"><%= link_to t('show'), admin_badge_path(badge),
                               class: 'btn btn-primary' %></td>
  <td class="align-middle"><%= link_to t('edit'),
                               edit_admin_badge_path(badge),
                               data: { badge_id: badge.id },
                               class: 'btn btn-primary' %></td>

  <td class="align-middle"><%= link_to t('delete'), 
                               admin_badge_path(badge),
                               method: :delete,
                               data: { confirm: t('confirm') },
                               class: 'btn btn-primary' %></td>
</tr>
