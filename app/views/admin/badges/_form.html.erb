<%= form_with model: [:admin, @badge], local: true do |form| %>
  
  <%= render 'shared/errors', resource: @badge %> 

  <p>
    <%= form.label :name %>
    <%= form.text_field :name, id: :badge_name %>
  </p>

  <p>
    <%= form.label :description %>
    <%= form.text_area :description, id: :badge_description %>
  </p>

  <p>
    <%= form.label :rule_type %>
    <%= form.select :rule_type, RewardingServise.rule_types %>
  </p>

  <p>
    <%= form.label :rule_value %>
    <%= form.text_field :rule_value, id: :badge_rule_value %>
  </p>

  <p>
    <%= form.label :img_direction %>
    <%= form.text_field :img_direction, id: :badge_img_direction %>
  </p>

  <p><%= form.submit %></p>

<% end %>  

