<h1><%= t('.header') %></h1>

<p>
  <%= link_to t('.new_test'), new_admin_test_path, class: 'btn btn-primary' %>
  <%= link_to t('.custom_test_view'), tests_path, class: 'btn btn-primary' %>
  <%= link_to 'Gists', admin_gists_path, class: 'btn btn-primary' %>
</p>

<%= render 'shared/errors', resource: @test %>

<div class="row mt-3">
  <table class="table">
     <tr class="table-primary">
      <th class="sort-by-title pointer">
        <%= t('.title') %>
        <%= octicon 'arrow-up', class: "text-success hide" %>
        <%= octicon 'arrow-down', class: "text-success hide" %>
      </th>
      <th><%= t('.level') %></th>
      <th><%= t('.category') %></th>
      <!-- <th><%#= t('.author') %></th> -->
      <th><%= t('.quantity_questins') %></th>
      <th colspan="3"><%= t('action') %></th>
    </tr>

    <%= render @tests %>

    <% unless @tests.present? %>
      <th colspan="7"><%= t('.no_tests') %></th>  
    <% end %>
  </table>
</div>  
